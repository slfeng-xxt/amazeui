{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "tsc",
            "args": ["run", "tsc"],
            "isBuildCommand": true,
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "watch",
            "args": ["run", "watch"],
            "isWatching": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "test",
            "args": ["run", "test"],
            "isTestCommand": true
        }
    ]
}
